{
  "name": "envoyou-page",
  "version": "1.0.0",
  "description": "This repository contains the source code for the official landing page of the ENVOY API...",
  "main": "script.js",
    "scripts": {
    "clean": "rimraf dist",
    "copy:assets": "copyfiles -u 1 \"src/assets/**/*\" dist/assets",
    "copy:html": "copyfiles -u 2 \"src/pages/*.html\" dist",
    "copy:js": "copyfiles -u 2 \"src/js/*.js\" dist/js",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./dist/css/output.css --minify",
    "build": "npm run clean && npm run copy:html && npm run copy:assets && npm run copy:js && npm run build:css",
    "dev": "tailwindcss -i ./src/css/input.css -o ./dist/css/output.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hk-dev13/ENVOYou-page.git"
  },
  "keywords": [],
  "author": "Husni Kusuma (hk-dev13)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hk-dev13/ENVOYou-page/issues"
  },
  "homepage": "https://github.com/hk-dev13/ENVOYou-page#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}
